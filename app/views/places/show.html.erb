<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>


  <h1 class="pt-2 ms-4"><%= @place.name %></h1>

  <h2 class="pt-2 ms-4">My Posts</h2>

<body>
  <div class="container">



      <% if @current_user %>
        <div class="row">
          <% for post in @place.posts.where({ user_id: @current_user.id }) %>
              <div class="col-lg-4 col-md-6 pt-4">
                <h3><%= post.title %></h3>
                <h5 class="text-primary"><%= post.posted_on %></h4>
                <p><%= post.description %></p>
                <% if post.uploaded_image.attached? %>
                  <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
                <% else %>
                <% end %>
              </div>
          <% end %>
        </div> 
        
     



    <% end %>
  </div>
    <div class="pt-4 ms-4">
      <a href="/posts/new?place_id=<%= @place.id %>" class="btn btn-success">New Post</a>
    </div>
    <div class="pt-4 ms-4">
      <a href="/places" class="btn btn-secondary">Back to All Places</a>
    </div>
  
  
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>