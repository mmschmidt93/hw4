<!DOCTYPE html>
<html>
  <head>
    <title>Tacostagram Final</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="/stylesheets/application.css">
  </head>

  <body>
    <div>
      <% if @current_user %>
        Welcome.
        <a href="/">Home</a>
        <%= button_to "Logout", "/sessions/logout", method: :delete %>
      <% else %>
        <a href="/sessions/new">Login</a>
        |
        <a href="/users/new">Signup</a>
      <% end %>
    </div>
    <div>
      <%= flash[:notice] %>
    </div>

    <%= yield %>
  </body>
</html>
